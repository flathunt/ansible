pipeline {
    agent any
    stages {
        stage('Clone repo') {
            steps {
                git branch: 'main', credentialsId: 'marcusc', url: 'git@github.com:flathunt/ansible.git'            }
        }
        stage('Run interactive ansible on pis') {
            steps {
                input message: 'Which host?', ok: 'Go', parameters: [choice(choices: ['laptop', 'pi3', 'pi5'], name: 'host')], submitterParameter: 'host'
		sh '''
                sudo -u marcusc $host pis -i inventory -m setup
                '''
            }
        }
        stage('Run interactive ansible on laptop') {
            steps {
                sh '''
                sudo -u marcusc ansible laptop -i inventory -m setup
                '''
            }
        }
    }
}
